!/bin/bash

# Script that makes symlinks between home and ~/dotfiles

## vars

dir=~/dotfiles
old=~/dotfiles_old
files=".bashrc .config/neofetch .config/sway/ .config/sakura/ .bash_profile .bashrc .gitconfig

##

# create backup
echo -n "Creating $old for backup of existing dotfiles..."
mkdir -p $old
echo "done"

# cd to dotfiles
echo -n "Changing to $dir..."
cd $dir
echo "done"

# move existing dotfiles to $old
for file in $files; do
	echo "Moving existing dotfiles to $old
	mv ~/$file ~/$old/
	echo "Creating symlink to $file in home dir"
	ln -s $dir/$file ~/$file
done
